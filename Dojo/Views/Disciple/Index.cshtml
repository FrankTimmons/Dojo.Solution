@{
  Layout = "_Layout";
}

@using Dojo.Models;

@if(@Model.Count == 0)
{
  <h4>No Disciples have been added yet.</h4>
}

<ul>
  @foreach (Disciple disciple in Model)
  {
    <li>@Html.ActionLink($"{disciple.Name}", "Details", new { id = disciple.DiscipleId })</li>
  }
</ul>

<hr>

@Html.ActionLink("Add Disciple", "Create", "Disciple", null, new { @class="htmlButton"})