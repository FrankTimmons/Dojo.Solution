@{
  Layout = "_Layout";
}

@using Dojo.Models
@model Dojo.Models.Sensei;

@if(ViewBag.Count.Count == 0)
{
  <p>You can not add Disciples until you have a Sensei.</p>
  @Html.ActionLink("Add Sensei", "Create", "Sensei", null, new { @class="htmlButton"})
}
else
{
  @using (Html.BeginForm())
  {
    @Html.Label("Disciple Name")<span>  :  </span>
    @Html.TextBoxFor(model => model.Name, new {required = "required", @class="textBox" })
    @Html.Label("Sensei")<span>  :  </span>
    @Html.DropDownList("SenseiId")
    <input type="submit" value="Add new Disciple" class="htmlButton"/>
  }
}

