@{
  Layout = "_Layout";
}

@using Dojo.Models;
@model Dojo.Models.Disciple;


@if(Model.JoinEntities.Count == 0)
{
  <h6>Model.Name is not enrolled in any classes</h6> 
}
else
{
  <h6>Currently enrolled in @Model.JoinEntities.Count classes.</h6>
  <p>List of Senseis: </p>
  <ul>
    @foreach(var join in Model.JoinEntities)
    {
      <li>@Html.ActionLink($"{join.Sensei.Name}", "Details", "Sensei", new { id = join.Sensei.SenseiId})</li>
    }
  </ul>
}
<br>
<br>
<p>Contact Information: </p>

<br>

@Html.ActionLink("Enroll", "AddSensei", "Disciple", new { id = Model.DiscipleId }, new { @class="htmlButton"}) 
@Html.ActionLink("Delete " + $"{Model.Name}", "Delete", "Sensei", new { id = Model.DiscipleId }, new { @class="htmlButton"})