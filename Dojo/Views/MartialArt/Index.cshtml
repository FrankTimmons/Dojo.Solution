@{
  Layout = "_Layout";
}

@using Dojo.Models;

@if(@Model.Count == 0)
{
  <h4>No Martial Arts have been added yet.</h4>
}

<ul>
  @foreach (MartialArt art in Model)
  {
    <li>@Html.ActionLink($"{art.Type}", "Details", new { id = art.MartialArtId})</li>
  }
</ul>

<hr>

@Html.ActionLink("Add Martial Art", "Create", "MartialArt", null, new { @class="htmlButton"})