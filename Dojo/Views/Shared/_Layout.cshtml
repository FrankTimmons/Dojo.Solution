<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>@ViewBag.PageTitle</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <link rel="icon" type="image/x-icon" href="/img/favicon.ico">
    <link rel="stylesheet" href="~/css/styles.css">
  </head>
  <body>
    <div class="jumbotron">
      <h1 id="header"><img id="logo" src="~/img/DojoLogo.png"/>@Html.ActionLink("  Epicodojo", "Index", "Home")</h1>
    </div>
    <img class="bamboo" src="~/img/bamboo.png">
    <img class="bamboo2" src="~/img/bamboo.png">
    <img class="karateGuy" src="~/img/karateguy.gif">
    <p class="centerBtn"> @Html.ActionLink("Martial Arts", "Index", "MartialArt", null, new { @class="htmlButton"}) | @Html.ActionLink("Senseis", "Index", "Sensei", null, new { @class="htmlButton"}) | @Html.ActionLink("Disciples", "Index", "Disciple", null, new { @class="htmlButton"}) </p>
    <div class="container">
      <hr/>
      <h3>@ViewBag.Header</h3>
      <hr/>
      @RenderBody()
    </div>
    
  </body>
</html>